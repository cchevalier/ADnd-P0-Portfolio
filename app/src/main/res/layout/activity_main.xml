<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@color/uda_blue"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:text="@string/main_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:padding="20dp"
        android:textSize="18sp"
        android:textStyle="bold" />

    <ScrollView
        android:layout_below="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:isScrollContainer="true" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <Button
                android:id="@+id/button1"
                android:text="@string/app1"
                android:onClick="displayAlternativeToast"
                android:layout_width="260dp"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:layout_marginBottom="10dp"
                android:background="@color/uda_orange"
                android:layout_gravity="center_horizontal" />

            <Button
                android:id="@+id/button2"
                android:text="@string/app2"
                android:onClick="displayAlternativeToast"
                android:layout_width="260dp"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:layout_marginBottom="10dp"
                android:background="@color/uda_orange"
                android:layout_gravity="center_horizontal" />

            <Button
                android:id="@+id/button3"
                android:text="@string/app3"
                android:onClick="displayAlternativeToast"
                android:layout_width="260dp"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:layout_marginBottom="10dp"
                android:background="@color/uda_orange"
                android:layout_gravity="center_horizontal" />

            <Button
                android:id="@+id/button4"
                android:text="@string/app4"
                android:onClick="displayAlternativeToast"
                android:layout_width="260dp"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:layout_marginBottom="10dp"
                android:background="@color/uda_orange"
                android:layout_gravity="center_horizontal" />

            <Button
                android:id="@+id/button5"
                android:text="@string/app5"
                android:onClick="displayAlternativeToast"
                android:layout_width="260dp"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:layout_marginBottom="10dp"
                android:background="@color/uda_orange"
                android:layout_gravity="center_horizontal" />

            <Button
                android:id="@+id/button6"
                android:text="@string/app6"
                android:onClick="displayAlternativeToast"
                android:layout_width="260dp"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:layout_marginBottom="10dp"
                android:background="@color/uda_red"
                android:layout_gravity="center_horizontal" />

        </LinearLayout>

    </ScrollView>

</RelativeLayout>

